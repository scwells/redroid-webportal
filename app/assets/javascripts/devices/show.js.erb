        $("[id=expand-img]").on('click', function () {
          redroidPlayer.pause();
          var filename = $(this).parent().parent().next().attr("id");
          redroidPlayer.src({type: 'video/rtmp', src: ('rtmp://redroid-video.westus.cloudapp.azure.com/vod/' + filename)});
          redroidPlayer.load();
          redroidPlayer.play();
        });
    });
});
